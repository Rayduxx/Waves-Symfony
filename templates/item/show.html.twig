{% extends 'dashboard/adminbase.html.twig' %}

{% block title %}Item
{% endblock %}

{% block AdminContent %}
	<div class="layout-wrapper layout-content-navbar layout-without-menu">
		<img src="../nav/img/front-pages/backgrounds/cta-bg-light.png" class="position-absolute top-0 start-50 translate-middle-x object-fit-contain w-100 h-100" style="height: 121% !important;"/>
		<div class="layout-container">
			<div class="layout-page">
				<div class="content-wrapper">
					<div class="container-xxl flex-grow-1 container-p-y">
						<div class="card mb-4">
							<div class="card">
								<h5 class="card-header">Item</h5>
								<div class="table-responsive text-nowrap">
									<table class="table table-hover" id="tableac">
										<tbody class="table-border-bottom-0">
											<tr>
												<th>Id</th>
												<td>{{ item.id }}</td>
											</tr>
											<tr>
												<th>Titre</th>
												<td>{{ item.titre }}</td>
											</tr>
											<tr>
												<th>Description</th>
												<td>{{ item.description }}</td>
											</tr>
											<tr>
												<th>Auteur</th>
												<td>{{ item.auteur }}</td>
											</tr>
											<tr>
												<th>Prix</th>
												<td>{{ item.prix }}dt</td>
											</tr>
											<tr>
												<th>
													<a href="{{ path('app_item_index') }}" class="btn btn-primary">back to list</a>
													<a href="{{ path('app_item_edit', {'id': item.id}) }}" class="btn btn-secondary">edit</a>
												</th>
												<td>
													{{ include('item/_delete_form.html.twig') }}
												</td>
											</tr>
										</tbody>
									</table>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
